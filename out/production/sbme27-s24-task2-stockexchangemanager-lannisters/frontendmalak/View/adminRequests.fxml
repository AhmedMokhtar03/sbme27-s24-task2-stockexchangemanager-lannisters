<?xml version="1.0" encoding="UTF-8"?>

<!-- AdminManageTransactions.fxml -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontendmalak.ViewControl.AdminManageTransactions">
    <children>
        <TableView fx:id="tableView" prefHeight="350.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="typeOfTransactionColumn" text="Type of Transaction" />
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="amountColumn" text="Amount" />
                <TableColumn fx:id="currentBalanceColumn" text="Current Balance" />
                <TableColumn fx:id="newBalanceColumn" text="New Balance" />
            </columns>
        </TableView>
        <Button fx:id="acceptButton" layoutX="200.0" layoutY="360.0" onAction="#handleAccept" text="Accept" />
        <Button fx:id="rejectButton" layoutX="300.0" layoutY="360.0" onAction="#handleReject" text="Reject" />
        <Button fx:id="saveButton" layoutX="400.0" layoutY="360.0" onAction="#handleSave" text="Save Changes" />
    </children>
</AnchorPane>
