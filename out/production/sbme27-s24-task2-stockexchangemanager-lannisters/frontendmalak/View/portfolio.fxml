<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontendmalak.ViewControl.PortfolioController">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" spacing="10">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Your Portfolio" />
                <HBox spacing="20">
                    <children>
                        <VBox spacing="5">
                            <Label text="Name:" />
                            <Label text="Balance:" />
                        </VBox>
                        <VBox spacing="5">
                            <Label fx:id="nameLabel" />
                            <Label fx:id="balanceLabel" />
                        </VBox>
                    </children>
                </HBox>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Holdings" />
                <TableView fx:id="holdingsTable" prefHeight="59.0" prefWidth="580.0">
                    <columns>
                        <TableColumn fx:id="holdingsStockNameColumn" prefWidth="150.0" text="Stock" />
                        <TableColumn fx:id="holdingsQuantityColumn" prefWidth="100.0" text="Quantity" />
                        <TableColumn fx:id="holdingsPriceColumn" prefWidth="150.0" text="Price" />
                        <TableColumn fx:id="holdingsValueColumn" prefWidth="150.0" text="Value" />
                    </columns>
                </TableView>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Transaction History" />
                <TableView fx:id="transactionTable" prefHeight="150.0" prefWidth="580.0">
                    <columns>
                        <TableColumn fx:id="transactionTypeColumn" prefWidth="150.0" text="Type" />
                        <TableColumn fx:id="transactionAmountColumn" prefWidth="100.0" text="Amount" />
                        <TableColumn fx:id="transactionDateColumn" prefWidth="150.0" text="Date" />
                        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                    </columns>
                </TableView>
            </children>
        </VBox>
        <JFXButton fx:id="goBackBTN" layoutX="7.0" layoutY="27.0" onAction="#goBack" styleClass="button16" text="Back">
            <graphic>
                <FontAwesomeIconView glyphName="UNDO" />
            </graphic>
        </JFXButton>
    </children>
</AnchorPane>
