<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontendmalak.ViewControl.UserBondController">
    <children>
        <TableView fx:id="bondTableView" prefHeight="300.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="companyColumn" prefWidth="100.0" text="Company" />
                <TableColumn fx:id="bondPriceColumn" prefWidth="100.0" text="Bond Price" />
                <TableColumn fx:id="bondInterestColumn" prefWidth="100.0" text="Bond Interest" />
                <TableColumn fx:id="durationColumn" prefWidth="100.0" text="Duration" />
                <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Available Bonds" />
            <TableColumn fx:id="ownedquantityColumn" prefWidth="100.0" text="Owned Bonds" />
            </columns>
        </TableView>
        <HBox spacing="10.0">
            <VBox spacing="5.0">
                <Label text="Enter Quantity" />
                <TextField fx:id="quantityTextField" prefWidth="150.0" />
            </VBox>
            <Button onAction="#buyBonds" text="Buy" />
        </HBox>
        <Label fx:id="totalCostLabel" />
        <Label fx:id="maturityDateLabel" />
        <Label fx:id="returnedCashLabel" />
    </children>
</VBox>
